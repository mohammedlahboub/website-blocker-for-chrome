{
  "name": "Website Blocker",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Website Blocker",
  "permissions": ["tabs", "storage", "activeTab"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "./popup/popup.html"
  }
}
